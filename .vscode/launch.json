{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Existing g++ Build",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\program.exe"
            ,   // Path to your existing executable
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "externalConsole": true,   // Open a separate console for input/output
            "MIMode": "gdb",
            "setupCommands": [
                { "text": "-enable-pretty-printing", "description": "Enable GDB pretty printing", "ignoreFailures": true }
            ],
            "preLaunchTask": ""  // Remove any automatic build tasks
        }
    ]
}